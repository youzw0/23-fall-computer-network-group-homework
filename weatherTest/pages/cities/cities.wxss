.top {
  border-bottom: 4rpx solid rgb(180, 180, 180);
  position: fixed;
  z-index: 3;
  display: flex;
  top: 0%;
  width: 100%;
  height: 250rpx;
  background-color: rgb(255, 255, 255);
}

.back {
  font-size: 100rpx;
  width: 71rpx;
  height: 111rpx;
  display: block;
  box-sizing: border-box;
  position: relative;
  left: 38rpx;
  top: 26rpx
}

.searchbox {
  width: 671rpx;
  height: 83rpx;
  display: block;
  box-sizing: border-box;
  position: relative;
  left: -31rpx;
  top: 146rpx;
  background-color: rgb(228, 228, 228);
  border-radius: 40rpx;
}

.search {
  font-size: 35rpx;
  position: absolute;
  top: 19rpx;
  left: 50rpx;
  color: rgb(133, 133, 133);
}

.toppadding {
  width: 100%;
  height: 250rpx;
}

.card {
  z-index: 1;
  margin-left: 40rpx;
  margin-top: 25rpx;
  width: 90%;
  height: 180rpx;
  border-radius: 30rpx;
  background-color: rgb(224, 224, 224);
  position: relative;
}

.city {
  color: rgb(61, 61, 61);
  position: absolute;
  left: 50rpx;
  top: 40rpx;
  font-size: 50rpx;
}

.highlow {
  color: rgb(61, 61, 61);
  font-size: 33rpx;
  position: absolute;
  left: 50rpx;
  bottom: 35rpx;
}

.temp {
  color: rgb(61, 61, 61);
  position: absolute;
  top: 40rpx;
  right: 50rpx;
  font-size: 80rpx;
}

.del {
  z-index: 3;
  position: fixed;
  right: 50rpx;
  bottom: 100rpx;
  background-color: rgb(204, 204, 204);
  height: 90rpx;
  width: 90rpx;
  border-radius: 45rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cross {
  font-size: 80rpx;
  color: rgb(173, 173, 173);
  justify-self: center;
  align-self: center;
  text-align: center;
  line-height: 120rpx;
}

.source {
  color: rgb(112, 112, 112);
  padding-top: 25rpx;
  text-align: center;
  font-size: 30rpx;
  padding-bottom: 30rpx;
}